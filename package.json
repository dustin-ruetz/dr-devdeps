{
	"name": "@dustin-ruetz/devdeps",
	"version": "1.0.2",
	"description": "Package that provides development dependencies and standardized configurations for other JavaScript/TypeScript projects (both web and Node.js) to consume.",
	"main": "index.js",
	"scripts": {
		"// .githooks/": "Refer to the files in the ./.githooks/ folder for documentation on these commands.",
		".githooks/commit-msg": "commitlint --config ./lib/commitlint.config.js --edit",
		".githooks/pre-commit": "npm run build && lint-staged --config ./lib/lint-staged.config.js --relative",
		".githooks/pre-push": "npm run validate",
		"// .github/": "Use the `act` tool to test GitHub Actions workflows locally.",
		".github/release": "act --input DRY_RUN=true --secret OP_SERVICE_ACCOUNT_TOKEN --workflows ./.github/workflows/release.yaml",
		".github/validate": "act --workflows ./.github/workflows/validate.yaml",
		"prebuild": "npm run clean/lib",
		"build": "tsc --project ./tsconfig.build.json",
		"check": "npm-run-all2 --parallel check/*",
		"check/format": "npm run format -- --check ./",
		"check/lint/js-ts": "npm run lint/js-ts -- ./",
		"check/types": "tsc --noEmit",
		"clean": "npm-run-all2 --parallel clean/*",
		"clean/caches": "rimraf ./.caches/",
		"clean/deps": "rimraf ./node_modules/ ./package-lock.json",
		"clean/lib": "rimraf ./lib/",
		"dev": "npm run build -- --watch",
		"fix": "npm-run-all2 --parallel fix/*",
		"fix/format": "npm run format -- --write ./",
		"fix/lint/js-ts": "npm run lint/js-ts -- --fix ./",
		"format": "prettier --config ./lib/prettier.config.js --cache --cache-location ./.caches/.prettiercache --ignore-path ./.gitignore",
		"init": "git config core.hooksPath ./.githooks/_/ && npm install && npm run validate",
		"lint/js-ts": "eslint --config ./lib/eslint.config.cjs --cache --cache-location ./.caches/.eslintcache --ignore-path ./.gitignore",
		"prepublishOnly": "npm run build",
		"test/unit": "jest --config ./lib/jest.config.js --cache",
		"test/unit/coverage": "npm run test/unit -- --coverage",
		"test/unit/watch": "npm run test/unit -- --watch --coverage --collectCoverageFrom=",
		"validate": "npm-run-all2 --sequential build check test/unit/coverage"
	},
	"keywords": [],
	"author": "Dustin Ruetz",
	"license": "MIT",
	"engines": {
		"node": ">=18",
		"npm": ">=10"
	},
	"files": [
		".githooks/",
		"lib/",
		"tsconfig.build.json",
		"tsconfig.json"
	],
	"publishConfig": {
		"access": "public"
	},
	"repository": {
		"url": "git@github.com:dustin-ruetz/devdeps.git"
	},
	"type": "module",
	"dependencies": {
		"@commitlint/cli": "19.3.0",
		"@commitlint/config-conventional": "19.2.2",
		"@prettier/plugin-pug": "3.0.0",
		"@prettier/plugin-xml": "3.4.1",
		"@semantic-release/changelog": "6.0.3",
		"@semantic-release/git": "10.0.1",
		"@swc/core": "1.6.5",
		"@swc/jest": "0.2.36",
		"@tsconfig/strictest": "2.0.5",
		"@types/eslint": "8.56.10",
		"@types/jest": "29.5.12",
		"@types/lint-staged": "13.3.0",
		"@types/node": "20.14.8",
		"@typescript-eslint/eslint-plugin": "7.13.1",
		"@typescript-eslint/parser": "7.13.1",
		"conventional-changelog-conventionalcommits": "8.0.0",
		"eslint": "9.6.0",
		"jest": "29.7.0",
		"jest-environment-jsdom": "29.7.0",
		"lint-staged": "15.2.7",
		"npm-run-all2": "6.2.0",
		"postcss-scss": "4.0.9",
		"postcss-styled-syntax": "0.6.4",
		"prettier": "3.3.2",
		"rimraf": "5.0.7",
		"semantic-release": "24.0.0",
		"stylelint": "16.6.1",
		"stylelint-config-standard-scss": "13.1.0",
		"typescript": "5.5.2"
	},
	"devDependencies": {
		"husky": "9.0.11"
	}
}
